<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:id="@+id/apnmnts_view"
    android:background="@drawable/highlightcorner">

    <ImageView
        android:id="@+id/user_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:contentDescription="Property Image"
        />

    <LinearLayout
        android:id="@+id/infoSection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >



        <TextView
            android:id="@+id/user_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/infoSection1"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray"
            android:textSize="15sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/btn_call"
            android:layout_marginRight="10dp"
            android:text="Call"
            android:textStyle="bold"
            android:backgroundTint="#3cb043"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rountcorner"/>
    </LinearLayout>


</LinearLayout>